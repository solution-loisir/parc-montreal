    <meta property="og:url" content="https://parc-montreal.netlify.app{{ page.url | url }}" />
    <meta property="og:image" content="" />
    <meta property="og:image:alt" content="" />
</head>
<body>
    <header>
        <a href="{{ '/' | url }}">Accueil</a>
        <h1>{{ title if page.url === '/' else 'Arrondissement ' + area }}</h1>
    </header>
    {% include 'partials/pages-nav.njk' %}
    <main>
        {{ content | safe }}
    </main>
</body>
</html>